@using MusicLibraryApp.Areas.Identity.Data
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @model List<ApplicationUser>



    @section Styles {
        <link rel="stylesheet" href="~/css/adminIndex.css" />
    }

<h2>User List</h2>


    @if (TempData["AssignModeratorMessage"] != null)
{
    <div class="info-box">
        @TempData["AssignModeratorMessage"]
        <button class="round-button">&#10003;</button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <form method="post" asp-action="AssignModerator" asp-controller="Admin">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit">Assign as Moderator</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



}
