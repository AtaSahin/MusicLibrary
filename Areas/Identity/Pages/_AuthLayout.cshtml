@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    .login-logout-card {
        background-color: #000000; /* Siyah arka plan rengi */
        color: grey; /* Metin rengi */
        border-radius: 10px; /* Kartın kenar yuvarlaklığı */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Kart üzerine hafif bir gölge efekti */
    }

    .nav-link {
        color: #ffffff; /* Menü bağlantılarının metin rengi */
    }

        .nav-link.active {
            background-color: #1db954; /* Aktif menü bağlantısının renk */
            border-radius:10px;
            color: #000000; /* Aktif menü bağlantısının metin rengi */
        }
</style>
<div class="row justify-content-center">

    <div class="col-5 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="navaccordion-item">
                        <a class="nav-link" href="/Identity/Account/Login"> Login </a>
                    </li>
                    <li class="navaccordion-item">
                        <a class="nav-link" href="/Identity/Account/Register"> Register </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class=" row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>

        </div>
      
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false);
    <script>
        $(function () {
            const currentPage = location.pathname.toLowerCase(); 

            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            });
        });
    </script>
}

